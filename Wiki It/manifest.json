{
    "manifest_version" : 2, 
    "name" : "WikIt",
    "description" : "Select the word and search it on wikipedia",
    "version" : "1.0.0",

    "icons" : {
        "128" : "icon128.png",
        "48" : "icon48.png",
        "16" : "icon16.png"
    },

    "background" : {
        "scripts" : ["eventPage.js"],
        "persistent" : false
    },

    "permissions": [
        "tabs",
        "contextMenus"
    ]
}